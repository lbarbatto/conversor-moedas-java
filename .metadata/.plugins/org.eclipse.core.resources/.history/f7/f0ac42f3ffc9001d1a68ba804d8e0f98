package conversororacle.model;

public enum Moedas {
	
	A("ARS", "Argentina - Peso", "$"),
	B("BRL", "Brasil - Real", "R$"),
	C("CLP", "Chile - Peso", "$"),
	D("USD", "Estados Unidos - Dólar", "US$"),
	E("GBP", "Reino Unido - Libra Esterlina", "£"),
	F("EUR", "União Europeia - Euro", "€");
	
	private String indice;
    private String descricao;
    private String simbolo;


    Moedas(String indice, String descricao, String simbolo) {
        this.indice = indice;
        this.descricao = descricao;
        this.descricao = simbolo;
    }

    public String getIndice() {
        return this.indice;
    }
    public String getDescricao() {
        return descricao;
    }
    
    public String getSimbolo() {
        return simbolo;
    }  


}
